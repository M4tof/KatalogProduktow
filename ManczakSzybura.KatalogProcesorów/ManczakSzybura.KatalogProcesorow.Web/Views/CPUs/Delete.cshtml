@model ManczakSzybura.KatalogProcesorow.Interfaces.ICPU

@{
    ViewData["Title"] = "Delete CPU";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    h1 {
        color: #dc3545;
        justify-content: center;
        display: flex;
    }

    .details-container {
        max-width: 600px;
        margin: auto;
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        display: block;
        margin: auto;
    }

    .back-link {
        display: block;
        margin-top: 10px;
        color: #007bff;
        text-align: center;
    }
</style>

<h1>Confirm Deletion</h1>
<h3 class="text-center">Are you sure you want to remove this CPU from the catalog?</h3>

<div class="details-container">
    <hr />
    <dl class="row">
        <dt class="col-sm-4">Model Name</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-4">Manufacturer</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.manufacturer.Name)</dd>

        <dt class="col-sm-4">Socket</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.SocketType)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete Permanently" class="btn btn-danger" />
    </form>

    <a asp-action="Index" class="back-link">Cancel and Back to List</a>
</div>