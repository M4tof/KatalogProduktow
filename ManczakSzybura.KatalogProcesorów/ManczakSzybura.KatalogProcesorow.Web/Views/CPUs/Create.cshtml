@using ManczakSzybura.KatalogProcesorow.CORE
@model ManczakSzybura.KatalogProcesorow.Interfaces.ICPU

@{
    ViewData["Title"] = "Create CPU";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    h1 {
        color: #000000;
        justify-content: center;
        display: flex;
    }

    .form-container {
        max-width: 600px;
        margin: auto;
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group-button {
        margin-bottom: 20px;
        justify-content: center;
        display: flex;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .back-link {
        margin-top: 20px;
        display: block;
        color: #007bff;
    }
</style>

<h1>Create New CPU</h1>

<div class="form-container">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name" class="control-label">CPU Model Name:</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Cores" class="control-label">Number of Cores:</label>
            <input asp-for="Cores" class="form-control" type="number" />
            <span asp-validation-for="Cores" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Threads" class="control-label">Number of Threads:</label>
            <input asp-for="Threads" class="form-control" type="number" />
            <span asp-validation-for="Threads" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BaseClockGHz" class="control-label">Base Clock (GHz):</label>
            <input asp-for="BaseClockGHz" class="form-control" step="0.1" />
            <span asp-validation-for="BaseClockGHz" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SocketType" class="control-label">Socket Type:</label>
            <select asp-for="SocketType" class="form-control">
                @foreach (var item in Enum.GetValues(typeof(CPUSocketType)))
                {
                    <option value="@item">@item</option>
                }
            </select>
        </div>


        <div class="form-group">
            <label class="control-label">Manufacturer:</label>
            <select name="ManufacturerId" class="form-control">
                @* Add the cast to the interface here *@
                @foreach (var item in (IEnumerable<ManczakSzybura.KatalogProcesorow.Interfaces.IManufacturer>)ViewBag.Manufacturers)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>



        <div class="form-group-button">
            <input type="submit" value="Create CPU" class="btn btn-primary" />
        </div>
    </form>

    <a asp-action="Index" class="back-link">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}