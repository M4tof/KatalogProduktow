<Window x:Class="ManczakSzybura.KatalogProcesorow.UI.NewManufacturer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManczakSzybura.KatalogProcesorow.UI"
        mc:Ignorable="d"
        Title="Manufacturer Editor" Height="250" Width="450"
        ContentRendered="Window_ContentRendered" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="2" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" Name="headerText">Manufacturer Details</TextBlock>

        <Label Grid.Row="1" Grid.Column="0" Content="Company Name:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox Name="manufacturerName" Grid.Row="1" Grid.Column="1" Margin="5" VerticalContentAlignment="Center" Padding="3">Name</TextBox>

        <Label Grid.Row="2" Grid.Column="0" Content="Headquarters Address:" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox Name="manufacturerAddress" Grid.Row="2" Grid.Column="1" Margin="5" VerticalContentAlignment="Center" Padding="3">Address</TextBox>

        <WrapPanel Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button IsDefault="True" Name="btnDialogOk" Click="btnDialogOk_Click" MinWidth="80" Padding="5" Margin="0,0,10,0">_Apply</Button>
            <Button IsCancel="True" MinWidth="80" Padding="5">_Cancel</Button>
        </WrapPanel>
    </Grid>
</Window>