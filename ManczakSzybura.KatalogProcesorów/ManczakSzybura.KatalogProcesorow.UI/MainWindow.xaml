<Window x:Class="ManczakSzybura.KatalogProcesorow.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManczakSzybura.KatalogProcesorow.UI"
        mc:Ignorable="d"
        x:Name="Window"
        Title="CPU Catalog" Height="550" Width="1000">
    <TabControl>
        <!-- CPUS TAB -->
        <TabItem Header="CPUs">
            <DockPanel LastChildFill="True">
                <!-- LEFT: FILTERS AND SEARCH -->
                <StackPanel DockPanel.Dock="Left" Width="121" Margin="10" Height="324">
                    <TextBlock Text="Filters" FontWeight="Bold" FontSize="14" Margin="5,0,5,10"/>

                    <TextBlock Margin="5,5,5,0">Filter by:</TextBlock>
                    <ComboBox Margin="5" Name="filterTypeComboBox" SelectionChanged="FilterTypeComboBox_SelectionChanged">
                        <ComboBoxItem Content="socket type" />
                        <ComboBoxItem Content="manufacturer" />
                        <ComboBoxItem Content="number of cores" />
                    </ComboBox>

                    <ComboBox Margin="5" Name="filterValueComboBox" />
                    <Button Margin="5,0,5,15" Padding="2" Click="CPUApplyFilter">Apply Filter</Button>

                    <Separator Margin="5,10"/>

                    <TextBlock Margin="5,5,5,0">Search by name:</TextBlock>
                    <TextBox Margin="5" Name="cpuSearchField" />
                    <Button Margin="5,0,5,15" Padding="2" Click="ApplyCPUSearch">Search</Button>

                    <Separator Margin="5,10"/>

                    <Button Margin="5" Padding="5" Click="RemoveFiltersCPU" Background="#FFF0F0F0">Remove All Filters</Button>
                </StackPanel>

                <!-- RIGHT: DETAILS PANEL -->
                <StackPanel DockPanel.Dock="Right" Margin="10" Width="191" DataContext="{Binding ElementName=CPUList, Path=SelectedItem}" Height="297">
                    <TextBlock Text="CPU Details" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <TextBlock Margin="0,2">
                        <Run Text="ID: " FontWeight="Bold"/>
                        <Run Text="{Binding CPUID}"/>
                    </TextBlock>
                    <TextBlock Margin="0,2">
                        <Run Text="Name: " FontWeight="Bold"/>
                        <Run Text="{Binding CPUName}"/>
                    </TextBlock>
                    <TextBlock Margin="0,2">
                        <Run Text="Cores: " FontWeight="Bold"/>
                        <Run Text="{Binding CPUCores}"/>
                    </TextBlock>
                    <TextBlock Margin="0,2">
                        <Run Text="Threads: " FontWeight="Bold"/>
                        <Run Text="{Binding CPUThreads}"/>
                    </TextBlock>
                    <TextBlock Margin="0,2">
                        <Run Text="Base Clock: " FontWeight="Bold"/>
                        <Run Text="{Binding CPUBaseClockGhz}"/> <Run Text="GHz"/>
                    </TextBlock>
                    <TextBlock Margin="0,2">
                        <Run Text="Socket: " FontWeight="Bold"/>
                        <Run Text="{Binding CPUSocketType}"/>
                    </TextBlock>
                    <TextBlock Margin="0,2">
                        <Run Text="Manufacturer: " FontWeight="Bold"/>
                        <Run Text="{Binding CPUProducerName}"/>
                    </TextBlock>

                    <Button Margin="0,20,0,5" Click="EditCPU" Background="#ffffed">Edit Selected</Button>
                    <Button Margin="0,0,0,5" Click="RemoveCPU" Background="#FF7276">Remove Selected</Button>
                    <Button Margin="0,0,0,5" Click="AddCPU" Background="#FFE1FFE1">Add New CPU</Button>
                </StackPanel>

                <Grid Margin="0,10" Width="636">
                    <ListView Name="CPUList" 
          ItemsSource="{Binding ElementName=Window, Path=CPULVM.CPUs}" 
          SelectionChanged="CPUList_SelectionChanged"
          ScrollViewer.VerticalScrollBarVisibility="Visible">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="CPU Name" Width="250" DisplayMemberBinding="{Binding CPUName}"/>
                                <GridViewColumn Header="Manufacturer" Width="200" DisplayMemberBinding="{Binding CPUProducerName}"/>
                                <GridViewColumn Header="Cores" Width="60" DisplayMemberBinding="{Binding CPUCores}"/>
                                <GridViewColumn Header="Socket" Width="100" DisplayMemberBinding="{Binding CPUSocketType}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </DockPanel>
        </TabItem>

        <!-- MANUFACTURERS TAB -->
        <TabItem Header="Manufacturers">
            <DockPanel LastChildFill="True">
                <!-- LEFT: FILTERS AND SEARCH -->
                <StackPanel DockPanel.Dock="Left" Width="128" Margin="10" Height="303">
                    <TextBlock Text="Filters" FontWeight="Bold" FontSize="14" Margin="5,0,5,10"/>

                    <TextBlock Margin="5,5,5,0">Filter by address:</TextBlock>
                    <ComboBox Margin="5" Name="manufacturerFilterValueComboBox" />
                    <Button Margin="5,0,5,15" Click="ManufacturerApplyFilter">Apply Filter</Button>

                    <Separator Margin="5,10"/>

                    <TextBlock Margin="5,5,5,0">Search by name:</TextBlock>
                    <TextBox Margin="5" Name="manufacturerSearchField" />
                    <Button Margin="5,0,5,15" Click="ApplyManufacturerSearch">Search</Button>

                    <Separator Margin="5,10"/>

                    <Button Margin="5" Padding="5" Click="RemoveFiltersManufacturer" Background="#FFF0F0F0">Remove All Filters</Button>
                </StackPanel>

                <!-- RIGHT: DETAILS PANEL -->
                <StackPanel DockPanel.Dock="Right" Margin="10" Width="163" DataContext="{Binding ElementName=ManufacturerList, Path=SelectedItem}" Height="294">
                    <TextBlock Text="Manufacturer Details" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <TextBlock Margin="0,2">
                        <Run Text="ID: " FontWeight="Bold"/>
                        <Run Text="{Binding ManufacturerId}"/>
                    </TextBlock>
                    <TextBlock Margin="0,2">
                        <Run Text="Name: " FontWeight="Bold"/>
                        <Run Text="{Binding ManufacturerName}"/>
                    </TextBlock>
                    <TextBlock Margin="0,2">
                        <Run Text="Address: " FontWeight="Bold"/>
                        <Run Text="{Binding ManufacturerAddress}"/>
                    </TextBlock>

                    <Button Margin="0,20,0,5" Click="EditManufacturer" Background="#ffffed">Edit Selected</Button>
                    <Button Margin="0,0,0,5" Click="RemoveManufacturer" Background="#FF7276">Remove Selected</Button>
                    <Button Margin="0,0,0,5" Click="AddManufacturer" Background="#FFE1FFE1">Add New Manufacturer</Button>
                </StackPanel>

                <!-- CENTER: LIST VIEW -->
                <Grid Margin="10">
                    <!-- Removed fixed width and negative margins -->
                    <ListView Name="ManufacturerList" 
              ItemsSource="{Binding ElementName=Window, Path=ManufacturerLVM.Manufacturers}" 
              SelectionChanged="ManufacturerList_SelectionChanged"
              ScrollViewer.VerticalScrollBarVisibility="Visible">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Manufacturer Name" Width="250" DisplayMemberBinding="{Binding ManufacturerName}"/>
                                <GridViewColumn Header="Address" Width="300" DisplayMemberBinding="{Binding ManufacturerAddress}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>

            </DockPanel>
        </TabItem>
    </TabControl>
</Window>