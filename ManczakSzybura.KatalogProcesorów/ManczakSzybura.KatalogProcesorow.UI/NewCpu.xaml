<Window x:Class="ManczakSzybura.KatalogProcesorow.UI.NewCPU"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManczakSzybura.KatalogProcesorow.UI"
        mc:Ignorable="d"
        Title="CPU Editor" Height="400" Width="500"
        ContentRendered="Window_ContentRendered" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="2" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" Name="headerText">Provide CPU Information:</TextBlock>

        <Label Grid.Row="1" Grid.Column="0" Content="CPU Name:" VerticalAlignment="Center"/>
        <TextBox Name="cpuName" Margin="5" Grid.Column="1" Grid.Row="1" VerticalContentAlignment="Center">Name</TextBox>

        <Label Grid.Row="2" Grid.Column="0" Content="Socket Type:" VerticalAlignment="Center"/>
        <ComboBox Name="socketType" Margin="5" Grid.Column="1" Grid.Row="2" />

        <Label Grid.Row="3" Grid.Column="0" Content="Manufacturer:" VerticalAlignment="Center"/>
        <ComboBox Name="manufacturer" Margin="5" Grid.Column="1" Grid.Row="3" />

        <Label Grid.Row="4" Grid.Column="0" Content="Cores:" VerticalAlignment="Center"/>
        <TextBox Name="cpuCores" Margin="5" Grid.Column="1" Grid.Row="4" PreviewTextInput="NumberValidationTextBox">1</TextBox>

        <Label Grid.Row="5" Grid.Column="0" Content="Threads:" VerticalAlignment="Center"/>
        <TextBox Name="cpuThreads" Margin="5" Grid.Column="1" Grid.Row="5" PreviewTextInput="NumberValidationTextBox">1</TextBox>

        <Label Grid.Row="6" Grid.Column="0" Content="Base Clock (GHz):" VerticalAlignment="Center"/>
        <TextBox Name="cpuClock" Margin="5" Grid.Column="1" Grid.Row="6" PreviewTextInput="DecimalValidationTextBox">3.5</TextBox>

        <WrapPanel Grid.Column="1" Grid.Row="7" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button IsDefault="True" Name="btnDialogOk" Click="btnDialogOk_Click" MinWidth="80" Padding="5" Margin="0,0,10,0">_Apply</Button>
            <Button IsCancel="True" MinWidth="80" Padding="5">_Cancel</Button>
        </WrapPanel>
    </Grid>
</Window>